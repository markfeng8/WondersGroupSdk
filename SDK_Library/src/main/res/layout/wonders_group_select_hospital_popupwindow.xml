<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:background="@color/wonders_rgb_color_ffffff"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/wonders_padding_32dp"
    tools:context=".ui.selecthospital.view.SelectHospitalActivity">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:text="湖州市"
        android:textColor="@color/wonders_rgb_color_333333"
        android:textSize="@dimen/wonders_text_size_16sp" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_weight="3"
        android:divider="@color/wonders_rgb_color_c9c9c9"
        android:dividerHeight="1dp"
        android:scrollbars="none" />

</LinearLayout>