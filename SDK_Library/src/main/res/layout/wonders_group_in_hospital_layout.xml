<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/wonders_margin_8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/wonders_margin_16dp"
                android:text="张三"
                android:textColor="@color/wonders_rgb_color_333333"
                android:textSize="@dimen/wonders_text_size_18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/wonders_margin_16dp"
                android:background="@drawable/wonders_group_green_stroke_shape"
                android:paddingStart="@dimen/wonders_padding_16dp"
                android:paddingTop="@dimen/wonders_padding_6dp"
                android:paddingEnd="@dimen/wonders_padding_16dp"
                android:paddingBottom="@dimen/wonders_padding_6dp"
                android:text="医保"
                android:textColor="@color/wonders_rgb_color_0aae65"
                android:textSize="@dimen/wonders_text_size_14sp" />

            <TextView
                android:id="@+id/tvMobPayState"
                android:layout_width="128dp"
                android:layout_height="32dp"
                android:layout_marginStart="@dimen/wonders_margin_8dp"
                android:background="@drawable/wonders_group_open_state_selector"
                android:drawableStart="@drawable/wonders_group_already_open"
                android:enabled="true"
                android:gravity="center"
                android:paddingStart="@dimen/wonders_padding_8dp"
                android:paddingEnd="@dimen/wonders_padding_8dp"
                android:text="@string/wonders_open_mobile_pay"
                android:textColor="@drawable/wonders_group_text_selector"
                android:textSize="@dimen/wonders_text_size_12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/wonders_margin_8dp"
            android:layout_marginBottom="@dimen/wonders_margin_16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/wonders_margin_16dp"
                android:text="身份证号："
                android:textColor="@color/wonders_rgb_color_666666"
                android:textSize="@dimen/wonders_text_size_16sp" />

            <TextView
                android:id="@+id/tvIcNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/wonders_margin_8dp"
                android:gravity="center"
                android:text="123456789"
                android:textColor="@color/wonders_rgb_color_666666"
                android:textSize="@dimen/wonders_text_size_16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/wonders_rgb_color_e0e0e0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/wonders_padding_6dp">

            <TextView
                android:id="@+id/tvHospitalName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/wonders_margin_4dp"
                android:drawableStart="@drawable/wonders_group_hospital"
                android:drawablePadding="@dimen/wonders_padding_10dp"
                android:gravity="center"
                android:text="@string/wonders_huzhou_city"
                android:textColor="@color/wonders_rgb_color_333333" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvSelectHospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/wonders_margin_16dp"
                android:drawableEnd="@drawable/wonders_group_right_arrow"
                android:drawablePadding="@dimen/wonders_padding_10dp"
                android:text="@string/wonders_select_hospital"
                android:textColor="@color/wonders_rgb_color_c9c9c9" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/wonders_rgb_color_e0e0e0" />

        <include layout="@layout/wonders_group_in_hospital_detail" />

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/wonders_rgb_color_e0e0e0" />

        <include layout="@layout/wonders_group_in_hospital_gridlayout" />

    </LinearLayout>

</ScrollView>