<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wonders_rgb_color_ffffff">

    <com.wondersgroup.android.jkcs_sdk.widget.TitleBarLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:text="@string/wonders_leave_hospital_settle"
        app:textColor="@color/wonders_rgb_color_ffffff"
        app:textSize="@dimen/wonders_text_size_16sp"
        app:titleBgColor="@color/wonders_rgb_color_1e90ff" />

    <TextView
        android:id="@+id/tvSuccess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/wonders_margin_16dp"
        android:layout_marginTop="16dp"
        android:drawableStart="@drawable/wonders_group_pay_success"
        android:drawablePadding="@dimen/wonders_padding_10dp"
        android:gravity="center"
        android:text="恭喜您已全部成功支付！"
        android:textColor="@color/wonders_rgb_color_58c78f"
        android:textSize="@dimen/wonders_text_size_16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleBar" />

    <TextView
        android:id="@+id/treatName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/wonders_margin_36dp"
        android:layout_marginTop="@dimen/wonders_margin_16dp"
        android:layout_weight="1"
        android:gravity="start"
        android:text="就诊人："
        android:textColor="@color/wonders_rgb_color_969696"
        android:textSize="@dimen/wonders_text_size_14sp"
        app:layout_constraintStart_toStartOf="@id/tvSuccess"
        app:layout_constraintTop_toBottomOf="@id/tvSuccess" />

    <TextView
        android:id="@+id/tvTreatName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="start"
        android:text="@string/wonders_text_liangxiaoning"
        android:textColor="@color/wonders_rgb_color_333333"
        android:textSize="@dimen/wonders_text_size_14sp"
        app:layout_constraintBaseline_toBaselineOf="@id/treatName"
        app:layout_constraintLeft_toRightOf="@id/treatName" />

    <TextView
        android:id="@+id/socialNum"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/wonders_margin_8dp"
        android:layout_weight="1"
        android:text="社保卡号："
        android:textColor="@color/wonders_rgb_color_969696"
        android:textSize="@dimen/wonders_text_size_14sp"
        app:layout_constraintStart_toStartOf="@id/treatName"
        app:layout_constraintTop_toBottomOf="@id/treatName" />

    <TextView
        android:id="@+id/tvSocialNum"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="@string/wonders_social_number"
        android:textColor="@color/wonders_rgb_color_333333"
        android:textSize="@dimen/wonders_text_size_14sp"
        app:layout_constraintBaseline_toBaselineOf="@id/socialNum"
        app:layout_constraintLeft_toRightOf="@id/socialNum" />

    <TextView
        android:id="@+id/hospitalName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/wonders_margin_8dp"
        android:layout_weight="1"
        android:text="就诊医院："
        android:textColor="@color/wonders_rgb_color_969696"
        android:textSize="@dimen/wonders_text_size_14sp"
        app:layout_constraintStart_toStartOf="@id/socialNum"
        app:layout_constraintTop_toBottomOf="@id/socialNum" />

    <TextView
        android:id="@+id/tvHospitalName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="@string/wonders_huzhou_renmin_hospital"
        android:textColor="@color/wonders_rgb_color_333333"
        android:textSize="@dimen/wonders_text_size_14sp"
        app:layout_constraintBaseline_toBaselineOf="@id/hospitalName"
        app:layout_constraintLeft_toRightOf="@id/hospitalName" />

    <TextView
        android:id="@+id/billDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/wonders_margin_8dp"
        android:layout_weight="1"
        android:text="订单时间："
        android:textColor="@color/wonders_rgb_color_969696"
        android:textSize="@dimen/wonders_text_size_14sp"
        app:layout_constraintStart_toStartOf="@id/hospitalName"
        app:layout_constraintTop_toBottomOf="@id/hospitalName" />

    <TextView
        android:id="@+id/tvBillDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="2018-02-27"
        android:textColor="@color/wonders_rgb_color_333333"
        android:textSize="@dimen/wonders_text_size_14sp"
        app:layout_constraintBaseline_toBaselineOf="@id/billDate"
        app:layout_constraintLeft_toRightOf="@id/billDate" />

    <TextView
        android:id="@+id/billNo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/wonders_margin_8dp"
        android:layout_weight="1"
        android:text="订单编号："
        android:textColor="@color/wonders_rgb_color_969696"
        android:textSize="@dimen/wonders_text_size_14sp"
        app:layout_constraintStart_toStartOf="@id/billDate"
        app:layout_constraintTop_toBottomOf="@id/billDate" />

    <TextView
        android:id="@+id/tvBillNo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text=""
        android:textColor="@color/wonders_rgb_color_333333"
        android:textSize="@dimen/wonders_text_size_14sp"
        app:layout_constraintBaseline_toBaselineOf="@id/billNo"
        app:layout_constraintLeft_toRightOf="@id/billNo" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="@dimen/wonders_margin_16dp"
        android:background="@color/wonders_rgb_color_f0f0f0"
        app:layout_constraintTop_toBottomOf="@id/billNo" />

    <android.support.constraint.Guideline
        android:id="@+id/guideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/payDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/wonders_margin_16dp"
        android:layout_marginTop="@dimen/wonders_margin_8dp"
        android:drawableStart="@drawable/wonders_group_pay"
        android:drawablePadding="@dimen/wonders_padding_6dp"
        android:gravity="center"
        android:text="@string/wonders_text_pay_detail"
        android:textColor="@color/wonders_rgb_color_666666"
        android:textSize="@dimen/wonders_text_size_16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view1" />

    <TextView
        android:id="@+id/inHosTotalFee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/wonders_margin_16dp"
        android:text="住院总费用："
        android:textColor="@color/wonders_rgb_color_969696"
        android:textSize="@dimen/wonders_text_size_14sp"
        app:layout_constraintRight_toRightOf="@id/guideLine"
        app:layout_constraintTop_toBottomOf="@id/payDetails" />

    <TextView
        android:id="@+id/tvInHosTotalFee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥10000.44"
        android:textColor="@color/wonders_rgb_color_333333"
        android:textSize="@dimen/wonders_text_size_14sp"
        app:layout_constraintBaseline_toBaselineOf="@id/inHosTotalFee"
        app:layout_constraintLeft_toLeftOf="@id/guideLine" />

    <TextView
        android:id="@+id/yiBaoFee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/wonders_margin_8dp"
        android:text="医保部分总金额："
        android:textColor="@color/wonders_rgb_color_969696"
        android:textSize="@dimen/wonders_text_size_14sp"
        app:layout_constraintRight_toRightOf="@id/guideLine"
        app:layout_constraintTop_toBottomOf="@id/inHosTotalFee" />

    <TextView
        android:id="@+id/tvYiBaoFee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥2000.00"
        android:textColor="@color/wonders_rgb_color_333333"
        android:textSize="@dimen/wonders_text_size_14sp"
        app:layout_constraintBaseline_toBaselineOf="@id/yiBaoFee"
        app:layout_constraintLeft_toLeftOf="@id/guideLine" />

    <TextView
        android:id="@+id/cashFee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/wonders_margin_8dp"
        android:text="现金部分总金额："
        android:textColor="@color/wonders_rgb_color_969696"
        android:textSize="@dimen/wonders_text_size_14sp"
        app:layout_constraintRight_toRightOf="@id/guideLine"
        app:layout_constraintTop_toBottomOf="@id/yiBaoFee" />

    <TextView
        android:id="@+id/tvCashFee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥460.00"
        android:textColor="@color/wonders_rgb_color_333333"
        android:textSize="@dimen/wonders_text_size_14sp"
        app:layout_constraintBaseline_toBaselineOf="@id/cashFee"
        app:layout_constraintLeft_toLeftOf="@id/guideLine" />

    <TextView
        android:id="@+id/prepayFee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/wonders_margin_8dp"
        android:text="预交金总额："
        android:textColor="@color/wonders_rgb_color_969696"
        android:textSize="@dimen/wonders_text_size_14sp"
        app:layout_constraintRight_toRightOf="@id/guideLine"
        app:layout_constraintTop_toBottomOf="@id/cashFee" />

    <TextView
        android:id="@+id/tvPrepayFee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥560.00"
        android:textColor="@color/wonders_rgb_color_333333"
        android:textSize="@dimen/wonders_text_size_14sp"
        app:layout_constraintBaseline_toBaselineOf="@id/prepayFee"
        app:layout_constraintLeft_toLeftOf="@id/guideLine" />

    <TextView
        android:id="@+id/willFee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/wonders_margin_8dp"
        android:text="补缴现金："
        android:textColor="@color/wonders_rgb_color_969696"
        android:textSize="@dimen/wonders_text_size_14sp"
        app:layout_constraintRight_toRightOf="@id/guideLine"
        app:layout_constraintTop_toBottomOf="@id/prepayFee" />

    <TextView
        android:id="@+id/tvWillFee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥400.00"
        android:textColor="@color/wonders_rgb_color_333333"
        android:textSize="@dimen/wonders_text_size_14sp"
        app:layout_constraintBaseline_toBaselineOf="@id/willFee"
        app:layout_constraintLeft_toLeftOf="@id/guideLine" />

    <TextView
        android:id="@+id/tvInHosHis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/wonders_margin_16dp"
        android:layout_marginTop="@dimen/wonders_margin_24dp"
        android:layout_marginEnd="@dimen/wonders_margin_16dp"
        android:background="@drawable/wonders_group_4dp_blue_shape"
        android:gravity="center"
        android:padding="@dimen/wonders_padding_12dp"
        android:text="查看历史住院记录"
        android:textColor="@color/wonders_rgb_color_ffffff"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/willFee" />

</android.support.constraint.ConstraintLayout>