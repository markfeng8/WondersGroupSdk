<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wonders_rgb_color_ffffff"
    android:orientation="vertical"
    tools:context=".ui.afterpayhome.AfterPayHomeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/wonders_common_titlebar" />

            <include layout="@layout/wonders_afterpay_state_card" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/wonders_margin_24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/wonders_padding_8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/wonders_margin_8dp"
                    android:drawablePadding="@dimen/wonders_padding_4dp"
                    android:drawableStart="@drawable/wonders_setting"
                    android:gravity="center"
                    android:text="@string/wonders_settings"
                    android:textColor="@color/wonders_rgb_color_333333"
                    android:textSize="@dimen/wonders_text_size_14sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvUpdateInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/wonders_margin_10dp"
                    android:drawableEnd="@drawable/wonders_right_arrow"
                    android:drawablePadding="@dimen/wonders_padding_10dp"
                    android:text="@string/wonders_pass_update"
                    android:textColor="@color/wonders_rgb_color_b4b4b4"
                    android:textSize="@dimen/wonders_text_size_12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/wonders_padding_8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/wonders_margin_8dp"
                    android:drawablePadding="@dimen/wonders_padding_4dp"
                    android:drawableStart="@drawable/wonders_record"
                    android:gravity="center"
                    android:text="@string/wonders_settings"
                    android:textColor="@color/wonders_rgb_color_333333"
                    android:textSize="@dimen/wonders_text_size_14sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvPayRecord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/wonders_margin_10dp"
                    android:drawableEnd="@drawable/wonders_right_arrow"
                    android:drawablePadding="@dimen/wonders_padding_10dp"
                    android:text="@string/wonders_pay_records"
                    android:textColor="@color/wonders_rgb_color_b4b4b4"
                    android:textSize="@dimen/wonders_text_size_12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvPayToast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/wonders_margin_16dp"
                android:layout_marginTop="@dimen/wonders_margin_10dp"
                android:drawablePadding="@dimen/wonders_padding_6dp"
                android:drawableStart="@drawable/wonders_mark"
                android:text="@string/wonders_mark_text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/wonders_margin_10dp"
                android:background="@color/wonders_rgb_color_eeeeee"
                android:gravity="center"
                android:padding="@dimen/wonders_padding_10dp"
                android:text="@string/wonders_not_pay_records"
                android:textColor="@color/wonders_rgb_color_000000"
                android:textSize="@dimen/wonders_text_size_18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/wonders_margin_6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvHospitalName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/wonders_padding_10dp"
                    android:drawableStart="@drawable/wonders_hospital"
                    android:gravity="center"
                    android:text="@string/wonders_huzhou_renmin_hospital"
                    android:textColor="@color/wonders_rgb_color_333333" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvSelectHospital"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/wonders_margin_10dp"
                    android:drawableEnd="@drawable/wonders_right_arrow"
                    android:text="@string/wonders_select_hospital"
                    android:textColor="@color/wonders_rgb_color_c9c9c9" />
            </LinearLayout>

            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/wonders_margin_10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/wonders_margin_10dp"
                    android:text="@string/wonders_text_not_pay"
                    android:textColor="@color/wonders_rgb_color_333333"
                    android:textSize="@dimen/wonders_text_size_18sp" />

                <TextView
                    android:id="@+id/tvMoneyNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wonders_money_number"
                    android:textColor="@color/wonders_rgb_color_00b76a" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wonders_text_yuan" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvPayMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/wonders_margin_10dp"
                    android:background="@drawable/wonders_short"
                    android:gravity="center"
                    android:text="@string/wonders_pay_money"
                    android:textColor="@color/wonders_rgb_color_ffffff" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>