<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/wonders_margin_8dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/wonders_margin_8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPrepayFee"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:layout_weight="19"
            android:background="@drawable/wonders_group_gray_checked_selector"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:text="600元\n医院推荐"
            android:textColor="@drawable/wonders_group_text_recharge_selector" />

        <TextView
            android:id="@+id/tvChongZhiRecord"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:layout_marginStart="@dimen/wonders_margin_8dp"
            android:layout_weight="12"
            android:background="@drawable/wonders_group_gray_checked_selector"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text="500元"
            android:textColor="@drawable/wonders_group_text_recharge_selector" />

        <TextView
            android:id="@+id/tvDayDetail"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:layout_marginStart="@dimen/wonders_margin_8dp"
            android:layout_weight="12"
            android:background="@drawable/wonders_group_gray_checked_selector"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text="1000元"
            android:textColor="@drawable/wonders_group_text_recharge_selector" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/wonders_margin_8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvLeaveHos"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:layout_weight="18"
            android:background="@drawable/wonders_group_gray_checked_selector"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text="2000元"
            android:textColor="@drawable/wonders_group_text_recharge_selector" />

        <TextView
            android:id="@+id/tvInHosRecord"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:layout_marginStart="@dimen/wonders_margin_8dp"
            android:layout_weight="25"
            android:background="@drawable/wonders_group_gray_checked_selector"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:text="请输入其他金额\n100的倍数，不超过医院推荐金额"
            android:textColor="@drawable/wonders_group_text_recharge_selector" />
    </LinearLayout>

</LinearLayout>