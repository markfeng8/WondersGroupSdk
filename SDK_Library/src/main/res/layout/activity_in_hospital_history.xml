<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/activityView"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.wondersgroup.android.jkcs_sdk.widget.TitleBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text="@string/wonders_in_hospital_list"
        app:textColor="@color/wonders_rgb_color_ffffff"
        app:textSize="@dimen/wonders_text_size_16sp"
        app:titleBgColor="@color/wonders_rgb_color_1e90ff" />

    <TextView
        android:id="@+id/tvHospitalName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/wonders_margin_16dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="@dimen/wonders_margin_16dp"
        android:drawableStart="@drawable/wonders_group_hospital"
        android:drawableEnd="@drawable/wonders_group_right_arrow"
        android:drawablePadding="@dimen/wonders_padding_10dp"
        android:gravity="start|center"
        android:text="@string/wonders_huzhou_city"
        android:textColor="@color/wonders_rgb_color_333333" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="2dp"
        android:background="@color/wonders_rgb_color_e0e0e0" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>