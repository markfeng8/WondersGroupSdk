<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/wonders_padding_16dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvFeeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="药品费"
                android:textColor="@color/wonders_rgb_color_333333"
                android:textSize="@dimen/wonders_text_size_16sp" />

            <TextView
                android:id="@+id/tvDepartment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/wonders_margin_16dp"
                android:text="外科 普通门诊"
                android:textColor="@color/wonders_rgb_color_666666"
                android:textSize="@dimen/wonders_text_size_14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/wonders_margin_8dp"
            android:text="2018-08-23 09:55:36"
            android:textColor="@color/wonders_rgb_color_c9c9c9"
            android:textSize="@dimen/wonders_text_size_10sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="156.88"
        android:textColor="@color/wonders_rgb_color_00a861"
        android:textSize="@dimen/wonders_text_size_12sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="元"
        android:textColor="@color/wonders_rgb_color_666666"
        android:textSize="@dimen/wonders_text_size_12sp" />

</LinearLayout>