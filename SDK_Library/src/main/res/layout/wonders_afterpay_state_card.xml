<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/wonders_margin_10dp"
    android:layout_marginRight="@dimen/wonders_margin_10dp"
    android:background="@drawable/wonders_white_shape_10dp"
    android:orientation="vertical"
    android:padding="@dimen/wonders_padding_20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/wonders_margin_10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTreatName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wonders_text_liangxiaoning"
            android:textColor="@color/wonders_rgb_color_333333"
            android:textSize="@dimen/wonders_text_size_18sp" />

        <TextView
            android:id="@+id/tvSocialNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/wonders_margin_10dp"
            android:text="@string/wonders_social_number"
            android:textColor="@color/wonders_rgb_color_666666"
            android:textSize="@dimen/wonders_text_size_12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/wonders_margin_10dp"
        android:layout_marginTop="@dimen/wonders_margin_10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvAfterPayState"
            android:layout_width="120dp"
            android:layout_height="32dp"
            android:background="@drawable/wonders_open_state_selector"
            android:drawableStart="@drawable/wonders_already_open"
            android:enabled="false"
            android:gravity="center"
            android:paddingEnd="@dimen/wonders_padding_8dp"
            android:paddingStart="@dimen/wonders_padding_8dp"
            android:text="@string/wonders_open_after_pay"
            android:textColor="@drawable/wonders_text_selector"
            android:textSize="@dimen/wonders_text_size_12sp" />

        <TextView
            android:id="@+id/tvOpenMobilePay"
            android:layout_width="120dp"
            android:layout_height="32dp"
            android:layout_marginStart="@dimen/wonders_margin_10dp"
            android:background="@drawable/wonders_open_state_selector"
            android:drawableStart="@drawable/wonders_already_open"
            android:enabled="false"
            android:gravity="center"
            android:paddingEnd="@dimen/wonders_padding_8dp"
            android:paddingStart="@dimen/wonders_padding_8dp"
            android:text="@string/wonders_open_mobile_pay"
            android:textColor="@drawable/wonders_text_selector"
            android:textSize="@dimen/wonders_text_size_12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvToPay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/wonders_margin_10dp"
        android:layout_marginTop="@dimen/wonders_margin_10dp"
        android:text="@string/wonders_to_pay_money"
        android:textColor="@color/wonders_rgb_color_333333" />

</LinearLayout>