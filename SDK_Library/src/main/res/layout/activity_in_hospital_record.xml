<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.wondersgroup.android.jkcs_sdk.widget.TitleBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text="@string/wonders_in_hospital_record"
        app:textColor="@color/wonders_rgb_color_ffffff"
        app:textSize="@dimen/wonders_text_size_16sp"
        app:titleBgColor="@color/wonders_rgb_color_1e90ff" />

    <include layout="@layout/wonders_group_in_hospital_home_header" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/wonders_rgb_color_e0e0e0" />

    <include layout="@layout/wonders_group_in_hospital_body" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/wonders_rgb_color_f0f0f0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="@dimen/wonders_padding_8dp">

        <TextView
            android:id="@+id/tvInHosDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/wonders_margin_8dp"
            android:drawableTop="@drawable/wonders_group_in_hospital_detail"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="住院清单"
            app:layout_columnWeight="1" />

        <TextView
            android:id="@+id/tvEleInvoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/wonders_margin_96dp"
            android:layout_marginTop="@dimen/wonders_margin_8dp"
            android:drawableTop="@drawable/wonders_group_electronic_invoice"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="电子发票"
            app:layout_columnWeight="1" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/wonders_rgb_color_e0e0e0" />

</LinearLayout>