<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llPayResult"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="visible">

    <TextView
        android:id="@+id/tvTongChouPay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/wonders_group_success"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="@string/wonders_personal_pay_complete"
        android:textColor="@color/wonders_rgb_color_00b76a"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/llContainer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/wonders_rgb_color_e0e0e0" />

    <TextView
        android:id="@+id/tvPayToast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/wonders_padding_6dp"
        android:drawableStart="@drawable/wonders_group_mark"
        android:gravity="center_vertical"
        android:padding="@dimen/wonders_padding_8dp"
        android:text="您还有一笔医保0.08元尚未支付，请继续支付！"
        android:textColor="@color/wonders_rgb_color_333333"
        android:textSize="@dimen/wonders_text_size_12sp"
        android:visibility="visible" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/wonders_rgb_color_e0e0e0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="@dimen/wonders_margin_10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总计合计"
            android:textColor="@color/wonders_rgb_color_969696"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvTotalPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/wonders_margin_10dp"
            android:text="0.1元"
            android:textColor="@color/wonders_rgb_color_333333"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/wonders_margin_10dp"
        android:background="@color/wonders_rgb_color_e0e0e0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="@dimen/wonders_margin_10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="医保账户支付"
            android:textColor="@color/wonders_rgb_color_969696"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvYiBaoPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/wonders_margin_10dp"
            android:text="0.09元"
            android:textColor="@color/wonders_rgb_color_333333"
            android:textSize="14sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/btnConfirmPay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/wonders_margin_10dp"
        android:background="@drawable/wonders_group_blue_shape"
        android:text="@string/wonders_confirm_pay"
        android:textColor="@color/wonders_rgb_color_ffffff"
        android:textSize="16sp" />

</LinearLayout>