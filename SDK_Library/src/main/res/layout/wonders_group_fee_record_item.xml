<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llHospitalItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/wonders_padding_16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wonders_group_hospital" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/wonders_margin_8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvHospitalName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="医院1"
                android:textColor="@color/wonders_rgb_color_333333"
                android:textSize="@dimen/wonders_text_size_16sp" />

            <TextView
                android:id="@+id/tvFeeDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单日期：2018-10-16"
                android:textColor="@color/wonders_rgb_color_666666"
                android:textSize="@dimen/wonders_text_size_12sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvTradeNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号：000000"
                android:textColor="@color/wonders_rgb_color_666666"
                android:textSize="@dimen/wonders_text_size_12sp"
                android:visibility="visible" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvPayMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/wonders_margin_10dp"
            android:background="@drawable/wonders_group_pay_detail_selector"
            android:enabled="true"
            android:gravity="center"
            android:text="继续支付"
            android:textColor="@color/wonders_rgb_color_ffffff"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wonders_group_down_arrow" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llHideLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/wonders_rgb_color_c9c9c9"
        android:orientation="vertical"
        android:visibility="gone" />

</LinearLayout>