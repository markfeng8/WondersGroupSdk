<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wonders_rgb_color_ffffff"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/payIcon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="3dp"
        android:src="@drawable/alipay" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/payName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wonders_pay_name"
            android:textColor="@color/wonders_rgb_color_000000" />

        <TextView
            android:id="@+id/payDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wonders_detail_introduce"
            android:textColor="@color/wonders_rgb_color_999999" />
    </LinearLayout>
</LinearLayout>