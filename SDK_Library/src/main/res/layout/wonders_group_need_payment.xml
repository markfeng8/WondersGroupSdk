<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llCenterMessage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/wonders_padding_10dp"
    android:visibility="gone">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="@dimen/wonders_margin_8dp"
        android:src="@drawable/wonders_group_mark" />

    <TextView
        android:id="@+id/tvPayInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/wonders_margin_4dp"
        android:layout_marginEnd="@dimen/wonders_margin_8dp"
        android:text="" />

</LinearLayout>