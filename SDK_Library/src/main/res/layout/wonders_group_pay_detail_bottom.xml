<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/wonders_padding_8dp">

    <TextView
        android:id="@+id/tvPayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/wonders_margin_10dp"
        android:text=""
        android:textColor="@color/wonders_rgb_color_666666"
        android:textSize="@dimen/wonders_text_size_14sp" />

    <TextView
        android:id="@+id/tvMoneyNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/wonders_rgb_color_00b76a"
        android:textSize="@dimen/wonders_text_size_16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wonders_text_yuan"
        android:textColor="@color/wonders_rgb_color_666666"
        android:textSize="@dimen/wonders_text_size_14sp" />

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/wonders_group_countdown" />

    <cn.iwgang.countdownview.CountdownView
        android:id="@+id/countDownView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/wonders_margin_4dp"
        android:layout_marginEnd="@dimen/wonders_margin_16dp"
        android:padding="@dimen/wonders_padding_2dp"
        android:visibility="visible"
        app:isHideTimeBackground="true"
        app:isShowDay="false"
        app:isShowHour="false"
        app:isShowMillisecond="false"
        app:isShowMinute="true"
        app:isShowSecond="true"
        app:isTimeTextBold="false"
        app:suffixGravity="center"
        app:suffixTextColor="@color/wonders_rgb_color_00b76a"
        app:suffixTextSize="14sp"
        app:timeTextColor="@color/wonders_rgb_color_00b76a"
        app:timeTextSize="14sp" />

    <TextView
        android:id="@+id/tvPayMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/wonders_margin_10dp"
        android:background="@drawable/wonders_group_pay_detail_selector"
        android:enabled="true"
        android:gravity="center"
        android:text="@string/wonders_pay_money"
        android:textColor="@color/wonders_rgb_color_ffffff" />
</LinearLayout>